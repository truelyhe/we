page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 32rpx;
}

.button {
  font-size: 35rpx;
  color: #52eff5;
  background-color: white;
  background-size: cover;
  min-width: 300px;
}

.button1 {
  font-size: 35rpx;
  color: #b0dd47;
  background-color: white;
  background-size: cover;
  min-width: 300px;
}

.button-hover{
  background: #f7f7f7;
}

.button::after {
  border: none;
}

.card {
  background: white;
  width: 660rpx;
  margin: 30rpx;
  border-radius: 10rpx;
}

.card-body {
  padding: 30rpx 30rpx;
}

.card-banner {
  width: 100%;
  height: 200rpx;
}

.card-desc {
  margin: 16rpx;
  width: 100%;
}

.card-label {
  color: #999;
}
